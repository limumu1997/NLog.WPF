<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:NLog.Avalonia">
  <Design.PreviewWith>
    <controls:NlogTextBox />
  </Design.PreviewWith>

  <Style Selector="controls|NlogTextBox">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
		  <TextBox
			  Text="Hello"
	          Name="textBox1"
			  BorderBrush="LightBlue"
			  Height="{TemplateBinding NlogHeight}"
			  AcceptsReturn="True"
			  TextWrapping="Wrap"
	          FontSize="12"
	          Margin="0,2" />
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
